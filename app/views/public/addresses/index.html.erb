<div class="container">

      <div class="row">
      <h3>配送先登録/一覧</h3>
      </div>
      
      <%= form_with model: @address, url: addresses_path do |f| %>
      
      <div class="row mt-3">
      <div class="col-lg-6">
      <p>郵便番号（ハイフンなし）</p>
      <div class="col-lg-6">
      <%= f.text_field :postal_code %>
      </div>
      </div>
      
      <div class="row mt-3">
      <div class="col-lg-6">
      <p>住所</p>
      <div class="col-lg-6">
      <%= f.text_field :address %>
      </div>
      </div>
      
      <div class="row mt-3">
      <div class="col-lg-6">
      <p>宛名</p>
      <div class="col-lg-6">
      <%= f.text_field :name %>
      </div>
      </div>
      
      <div class="row mt-3 mb-5">
      <div class="col-lg-6">
      <%= f.submit '新規登録', class:'btn btn-success' %>
      </div>
      </div>
      
      <% end %>
      
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_address_path(address.id), class:'btn btn-success' %><%= link_to '削除する', address_path(address.id), method: :delete, data: { confirm: "本当に削除しますか" }, class:'btn btn-danger'  %></td>
          </tr>
          <% end %>
        </tbody>
      </table>