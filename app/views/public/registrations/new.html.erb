<div class="container"> 
      
      <h3>新規会員登録</h3>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        
        <div class="row">
          
          <div class="col-lg-2 mt-4 mb-4">
            <p>名前</p>
          </div>
          
          <div class="field">
            <div class="col-lg-auto">
              <%= f.label :last_name, "(性)" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
          </div>
          
          <div class="field">
            <div class="col-lg-auto">
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </div>
          
        </div>
        
        
        <div class="row">
          
          <div class="col-lg-2 mt-4 mb-4">
            <p>フリガナ</p>
          </div>
          
          <div class="field">
            <div class="col-lg-auto">
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
          </div>
          
          
          <div class="field">
            <div class="col-lg-auto">
              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </div>
        
        </div>
      
        <div class="row">
            <div class="field">
              <div class="col-lg-auto">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>
        </div>
        
        <div class="row">
          <div class="field">
            <div class="col-lg-auto">
              <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </div>
        </div>
        
        <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        
        <div class="field">
          <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
        
        <div class="field">
          <%= f.label :password, "パスワード"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
      
      <h2>すでに登録済みの方</h2>
      
      <%= link_to "こちら", customer_session_path(resource_name) %><p>からログインしてください。</p>


</div>     