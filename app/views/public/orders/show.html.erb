<div class="container">
  <div class="row-justify-content-center">

    <div class="col-lg">注文履歴詳細</div>

    <p>注文情報</p>
    <table>
      <thead>
        <tr>
          <th>注文日</th>
        </tr>
        <tr>
          <th>配送先</th>
        </tr>
        <tr>
          <th>支払方法</th>
        </tr>
        <tr>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <td><%= @order.pay_method %></td>
        </tr>
        <tr>
          <td><%= @order.status %></td>
        </tr>
      </tbody>
    </table>

    <p>注文内容</p>
    <table>
      <thead>
        <tr>
          <th>商品</th>
        </tr>
        <tr>
          <th>単価（税込）</th>
        </tr>
        <tr>
          <th>個数</th>
        </tr>
        <tr>
          <th>合計</th>
        </tr>
      </thead>
      <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td><%= cart_item.item.name %></td>
        </tr>
        <tr>
          <td><%= cart_item.item.with_tax_price %></td>
        </tr>
        <tr>
          <td><%= cart_item.amount %></td>
        </tr>
        <tr>
          <td><%= cart_item.subtotal %></td>
        </tr>
      </tbody>
    </table>
    <% end %>

    <p>請求情報</p>
    <table>
      <thead>
        <tr>
          <th>商品合計</th>
        </tr>
        <tr>
          <th>配送料</th>
        </tr>
        <tr>
          <th>ご請求額</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <td><%= 800 %></td>
        </tr>
        <tr>
          <td><%= 800 + @total_price  %></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>