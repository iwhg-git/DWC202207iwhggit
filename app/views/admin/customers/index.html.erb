<div class="container">

      <h3>会員一覧</h3>
      
      <table class='table'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>フリガナ</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name, admin_customer_path(customer.id) %><%= link_to customer.first_name, edit_admin_customer_path(customer.id) %></td>
            <td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
      
      
</div>