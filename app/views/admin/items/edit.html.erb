<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path do |f| %>

<p>商品画像</p>
<%= f.file_field :item_image, accept: "image/*" %>

<p>商品名</p>
<%= f.text_field :name %>

<p>商品説明</p>
<%= f.text_field :introduction %>

<p>ジャンル</p>
<%= f.collection_select_field :genre_id, Genre.all, :id, :name %>

<p>税抜価格</p>
<%= f.number_field :price %>

<p>販売ステータス</p>
<%= f.radio_button :is_active, 'on sale' %>
<%= f.label :is_active, '販売中' %>

<%= f.radio_button :is_active, 'stop selling' %>
<%= f.label :is_active, '販売停止中' %>

<%= f.submit '変更を保存' %>