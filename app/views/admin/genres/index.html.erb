<div class="container">

        <div class="row">
        <h3>ジャンル一覧・追加</h3>
        </div>

        <div class="row mt-5 mb-5">
        <p>ジャンル名</p>

        <%= form_with model: @genre, url: admin_genres_path do |f| %>

        <%= f.text_field :name %>

        <%= f.submit '新規登録', class:'btn btn-success' %>

        <% end %>
        </div>

        <div class="row mt-5 mb-5">
        <table class="table">
          <thead>
            <tr>
              <th scope="col-lg">ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:'btn btn-success' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>

</div>