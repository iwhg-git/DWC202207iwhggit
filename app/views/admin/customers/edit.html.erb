<div class="container">

      <div class="row">
      <h3><%= @customer.last_name %><%= @customer.first_name %>の会員情報編集</h3>
      </div>

      <div class="row mt-5">
      <div class="col-lg-2">
      <p>会員ID</p>
      </div>
      <div class="col-lg-2">
      <%= @customer.id %>
      </div>
      </div>

      <%= form_with model: @customer, url: admin_customer_path do |f| %>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>氏名</p>
      </div>
      <div class="col-lg-6">
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
      </div>
      </div>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>フリガナ</p>
      </div>
      <div class="col-lg-6">
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
      </div>
      </div>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>郵便番号</p>
      </div>
      <div class="col-lg-3">
      <%= f.text_field :postal_code %>
      </div>
      </div>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>住所</p>
      </div>
      <div class="col-lg-3">
      <%= f.text_area :address %>
      </div>
      </div>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>電話番号</p>
      </div>
      <div class="col-lg-3">
      <%= f.text_field :telephone_number %>
      </div>
      </div>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>メールアドレス</p>
      </div>
      <div class="col-lg-3">
      <%= f.text_field :email %>
      </div>
      </div>

      <div class="row mt-3">
      <div class="col-lg-2">
      <p>会員ステータス</p>
      </div>
      <div class="col-lg-2">
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, '有効' %>

      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, '退会' %>
      </div>
      </div>

      <%= f.submit '変更を保存', class:'btn btn-success' %>

      <% end %>

 </div>
</div>