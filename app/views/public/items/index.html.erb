<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>商品一覧</h3><p>全件</p>

<table>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= image_tag item.item_image %>
      </td>
      <td>
        商品名
      </td>
      <td>
        <%= item.price %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

