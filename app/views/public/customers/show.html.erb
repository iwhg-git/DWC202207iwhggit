<div class="container">

    <div class="row">
    <div class="col-lg-6">
    <h3>マイページ</h3>
    </div>
    </div>

    <div class="row mt-4">
    <div class="col-lg-3">
    <h3>登録情報</h3>
    </div>
    <div class="col-lg-3">
    <p><%= link_to '編集する', edit_customer_path, class:'btn btn-success' %></p>
    </div>
    </div>

    <div class="row">
    <div class="col-lg-5">
    <table class='table table-bordered'>
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    </div>
    </div>

    <div class="row">
    <div class="col-lg-2 m-2">
    <h5>配送先</h5>
    </div>
    <div class="col-lg-2 m-2">
    <%= link_to '一覧を見る', addresses_path, class:'btn btn-primary' %>
    </div>
    </div>

    <div class="row">
    <div class="col-lg-2 mt-2">
    <h5>注文履歴</h5>
    </div>
    <div class="col-lg-2 mt-2">
    <%= link_to '一覧を見る', orders_path, class:'btn btn-primary' %>
    </div>
    </div>

  </div>
</div>