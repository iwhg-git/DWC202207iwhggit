<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= image_tag @item.get_item_image(100,100) %>

<%= @item.name %>

<%= @item.introduction %>

<%= @item.price %>

<%= form_with model: @cart_item, url: cart_items_path do |f| %>

<%= f.select :amount, [["１個", "1"], ["２個", "2"], ["3個", "3"], ["4個", "4"], ["5個", "5"], ["6個", "6"], ["7個", "7"], ["8個", "8"], ["9個", "9"], ["10個", "10"]], include_blank: "選択して下さい" %>

<%= f.hidden_field :item_id, value: @item.id %>

<%= f.hidden_field :customer_id, value: current_customer.id %>

<%= f.submit 'カートに入れる' %>

<% end %>