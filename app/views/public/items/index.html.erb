<div class="container">
 <div class="row">
   
    <div class="col-lg-3">
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      
    <div class="col-lg-9">
      <h3>商品一覧</h3><p>全<%= @items.count %>件</p>
      
      <div class="table-responsive-lg">
      <table>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%#<%=link_to image_tag item.item_image, item_path(current_customer) %>
              <%= link_to item_path(item.id) do %>
               <%= image_tag item.get_item_image(100,100) %>
              <% end %>
            </td>
            <td>
              商品名
            </td>
            <td>
              <%= item.price %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
      
      
  </div>
</div>