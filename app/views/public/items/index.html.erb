<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>商品一覧</h3><p>全<%= @items.count %>件</p>

<table>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%#<%=link_to image_tag item.item_image, item_path(current_customer) %>
        <%= link_to item_path(item.id) do %>
         <%= image_tag item.get_item_image(100,100) %>
        <% end %>
      </td>
      <td>
        商品名
      </td>
      <td>
        <%= item.price %>
      </td>
    </tr>
    <% end %>
    <%= paginate @items %>
  </tbody>
</table>