<h3>注文情報入力</h3>

<%= form_with model: @order, url: orders_confirm_path do |f| %>

<p>支払方法</p>
<%= f.radio_button :pay_method, Order.payment_methods.key(0) %>
<%= f.label :pay_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :pay_method, Order.payment_methods.key(1) %>
<%= f.label :pay_method, Order.payment_methods_i18n[:transfer] %>

<p>お届け先</p>

<%= f.radio_button :select_address, 0 %>
<%= f.label :select_address, 'ご自身の住所' %><br />

<%= f.radio_button :select_address, 1 %>
<%= f.label :select_address, '登録済住所から選択' %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br />

<%= f.radio_button :select_address, 2 %>
<%= f.label :select_address, '新しいお届け先' %>

<p>郵便番号（ハイフンなし）</p>
<%= f.text_field :postal_code %>

<p>住所</p>
<%= f.text_field :address %>

<p>宛名</p>
<%= f.text_field :name %>

<%= f.submit '確認画面へ進む' %>

<% end %>