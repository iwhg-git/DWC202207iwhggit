<h1>会員一覧</h1>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name, admin_customer_path(customer.id) %><%= link_to customer.last_name, edit_admin_customer_path(customer.id) %></td>
      <td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
  </tbody>
  <% end %>
</table>

